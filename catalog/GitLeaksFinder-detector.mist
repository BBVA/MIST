GitLeaksFinder {
    input {
        git_path <= %gitPath
    }
    output {
        hasVulnerabilities
        issues
        result
        console
    }
    then {

        check hasVulnerabilities is True {
            Abort "Code has vulnerabilities"
        }
        check hasVulnerabilities is False {
            print "Code is clean and safe"
        }
    }
}
