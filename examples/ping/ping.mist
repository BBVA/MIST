# Name: Ping
# Description: Ping some host and save result
# Tags: Ping, Network

data myHosts {
    Host
    Status
}

ping {
    input {
        ip <= "127.0.0.1"
    }
    output {
        result
        console
    }
    then {
        check result is Success {
            put ip 'Up' => myHosts
        }
        check result is Error {
            put ip 'Down' => myHosts(Host Status)
        }
    }
}

print myHosts
