include "searchDomains" "filterRepeated" 
include "wpscan.mist"
#import "./wpscan.py"

function save(r) {
    if (r.result) {
        print("Wordpress found at", r.wpinfo.target_url)
        fields = strSplit(r.wpinfo.target_url,"/")
        writeToFile(r.consoleOutput, "{fields[2]}.json")
    }
}

searchDomains(%domain) => filterRepeated(False) => wpscan() => save()
