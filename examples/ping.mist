# Name: Ping
# Description: Ping some host and save result
# Tags: ping, network

data myHostsPing {
    Host
    Status
}

ping {
    version <= "1.0.0+"
    input {
        ip <= "127.0.0.1"
    }
    output {
        result
        console
    }
    then {
        _load_mist_model_ result is Success {
            put ip 'Up' => myHostsPing
        }
        _load_mist_model_ result is Error {
            put ip 'Down' => myHostsPing(Host Status)
        }
    }
}

print myHostsPing
