command readFile (file) {
    exec "cat {file}" {
        input {
            file <= file
        }
        then {
            set content <= consoleOutput
        }
    }
    expose content
}

command findOpenPorts (ip ports) {
    set file <= "/tmp/findOpenPortsOutput.xml"
    set result <= True
    exec "nmap -p {ports} --open {ip} -oX {file}" {
        input {
            ip <= ip
            ports <= ports
            file <= file
        }
        then {
            set result <= result
            set console <= consoleOutput
            check result is Error {
                print "ERROR RUNNING NMAP"
                print consoleError
                done
            }
        }
    }
    call readFile {
        input {
            file <= file
        }
        then {
            #print content
            searchInXML ".//*[@portid]" content {
                output {
                    result
                    found
                    value
                }
                then {
                    #print found.attributes.portid
                    iterate found => p {
                        print p.attributes.portid
                        print "Puerto abierto {p.attributes.portid}"
